{{>header}}

<!-- Edit  -->
<section id="viewEditdestination">
    <h2>Edit existing destination</h2>
    <form id="formAdddestination" action="/edit/{{trip._id}}" method="POST">
        <label for="destination">Destination name:</label>
        <input type="text" id="destination" name="destination" value="{{trip.destination}}">
        <label for="city">City:</label>
        <input type="text" id="city" name="city" value="{{trip.city}}">
        <label for="duration">Duration:</label>
        <input type="number" id="duration" name="duration" value="{{trip.duration}}">
        <label for="departureDate">Departure Date:</label>
        <input type="date" id="departureDate" name="departureDate" value="{{trip.departureDate}}">
        <label for="imgUrl">Image:</label>
        <input type="text" id="imgUrl" name="imgUrl" value="{{trip.imgUrl}}">

        <input type="submit" class="create" value="Edit">
    </form>
</section>

{{>footer}}