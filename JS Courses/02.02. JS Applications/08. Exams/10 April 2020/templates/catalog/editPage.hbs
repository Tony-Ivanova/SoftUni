{{>header}}
<!-- Edit -->
<main id="home-logged">
  <section class="first-section">
    <section class="background-container">
      <form action="/edit/{{blogPost._id}}" method="POST" class="edit-form">
        <h1>Edit Post</h1>
        <label for="title">Title</label>
        <input type="text" name="title" value="{{blogPost.title}}">
        <label for="category">Category</label>
        <input type="text" name="category" value="{{blogPost.category}}">
        <label for="content">Content</label>
        <textarea name="content" cols="30" rows="7">{{blogPost.content}}</textarea>
        <button>Edit</button>
        <a href="/home" id="close-btn"><img src="../../images/close.png"></a>
      </form>
    </section>
  </section>
  <section class="second-section">
    <h3>Posts</h3>
    <hr>
    <div class="posts-row">
      {{#each posts}}
      {{>blogPost}}
      {{/each}}
    </div>
  </section>
</main>