<div class="container">
    <h1 class="my-4">{{title}}</h1>

    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="{{imageUrl}}" alt="" />
        </div>

        <div class="col-md-4 text-center">
            <h3 class="my-3">Course Description</h3>
            <p>{{description}}</p>
            {{#unless errors}}
            {{#if isCreator}}
            <a class="btn btn-danger" href="/delete/{{_id}}">Delete</a>
            <a class="btn btn-warning" href="/edit/{{_id}}">Edit</a>
            {{else}}
            {{#if isEntrolled}}
            <span class="enrolled-span">You are already enrolled</span>
            {{else}}
            <a class="btn btn-primary" href="/enroll/{{_id}}">Enroll</a>
            {{/if}}
            {{/if}}
            {{/unless}}
        </div>
    </div>
</div>