@model FastFood.Web.ViewModels.Employees.CreateEmployeeInputModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OhGodAbove.Id" />
            <div class="form-group">
                <label asp-for="OhGodAbove.Name" class="control-label" ></label>
                <input minlength="03" maxlength="30" asp-for="OhGodAbove.Name" class="form-control" name="Name"/>
                <span asp-validation-for="OhGodAbove.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OhGodAbove.Age" class="control-label"></label>
                <input min="16" max ="65" asp-for="OhGodAbove.Age" class="form-control" name="Age" />
                <span asp-validation-for="OhGodAbove.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OhGodAbove.Address" class="control-label"></label>
                <input minlength="03" maxlength="30" asp-for="OhGodAbove.Address" class="form-control" name="Address"/>
                <span asp-validation-for="OhGodAbove.Address" class="text-danger"></span>
            </div>         
            <div class="form-group">
                <label for="position">Position</label>
                <select id="position" class="form-control" name="PositionName">
                    @foreach (var position in Model.ICantNoMore)
                    {
                        <option value="@position">@position</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
                <a class="btn btn-primary" asp-controller="Employees" asp-action="All">Back</a>
            </div>
        </form>
    </div>
</div>

